{
  "name": "@farsquare/evm-orderbook",
  "version": "0.1.0",
  "description": "ERC-3643 compliant decentralized orderbook with Uniswap V3 settlement",
  "private": true,
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch run src/server.ts",
    "keeper": "bun run src/keeper.ts",
    "keeper:dev": "bun --watch run src/keeper.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bun run eslint src/**/*.ts",
    "build": "bun build src/server.ts --outdir dist",
    "typecheck": "bun run tsc --noEmit"
  },
  "keywords": [
    "erc3643",
    "uniswap-v3",
    "orderbook",
    "decentralized-exchange",
    "blockchain",
    "compliance",
    "security-tokens"
  ],
  "author": "Farsquare",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.0.0",
    "viem": "^2.0.0",
    "@wagmi/core": "^2.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
